{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 9096 },
      "pathMappings": [{ "localRoot": "${workspaceFolder}/code/backend/batch", "remoteRoot": "." }]
    },
    {
      "name": "poetry debug",
      "type": "debugpy",
      "request": "launch",
      "module": "poetry",
      "args": ["run", "func", "start"],
      "cwd": "${workspaceFolder}/code/backend/batch"
    }
  ]
}
